<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/xml_widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xml_widget_title"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/xml_widget_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xml_widget_default_message"
        android:textColor="#CCCCCC"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/xml_widget_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xml_widget_button_text"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"/>

</LinearLayout>